<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChoixCommunauteActivity">

    <include
        android:id="@+id/toolbar_activity"
        layout="@layout/toolbar_simple" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/backgrnd_bitmap"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Déjà inscrit :"
        android:textColor="@color/white"
        android:id="@+id/tvDejaInscrit"
        android:textSize="15dp"
        android:layout_below="@+id/toolbar_activity"
        android:layout_alignStart="@+id/relLayout"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:id="@+id/relLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/toolbar_activity"
        android:background="@drawable/background_button"
        android:layout_above="@+id/btnRejoindreCommunaute" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rejoindre une communauté"
        android:textColor="@color/white"
        android:background="@drawable/background_button"
        android:id="@+id/btnRejoindreCommunaute"
        android:layout_above="@+id/btnCreerCom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Créer une communauté"
        android:id="@+id/btnCreerCom"
        android:textColor="@color/white"
        android:background="@drawable/background_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>
